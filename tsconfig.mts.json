{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/tsconfig.ts.tsbuildinfo", /* Specify the path to .tsbuildinfo incremental compilation file. */
    "strict": true,
    "allowJs": false, /* Allow JavaScript files to be a part of your program. Use the 'checkJS' option to get errors from these files. */
    "checkJs": false, /* Enable error reporting in type-checked JavaScript files. */
  },
  "include": [
    "src/**/*.mts",
    "src/**/*.json",
  ],
  "exclude": [
    "src/lib/_moke-@noble__hashes",
    "src/lib/_moke-@noble__secp256k1",
    "src/lib/_moke-ethereum-cryptography",
    "src/lib/_moke-ethereum-cryptography-base",
    "src/lib/_moke-web3",
    "src/lib/crc-32",
    "src/lib/ethereum",
    "src/lib/web3",
  ],
  "references": []
}